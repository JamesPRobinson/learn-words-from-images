            button(class="answer-button disabled" onclick="submit_answer(this)" disabled="disabled")=name
script.
  var canvas;
  var context;
  var width_ratio;
  var height_ratio;
  var last_box;
  async function drawInitialRectangle(box, image, colour = "red") {
      canvas = document.querySelector("canvas");
      context = canvas.getContext("2d");
      const imageWidth_og = image.naturalWidth;
      const imageHeight_og = image.naturalHeight;
      const imageWidth = image.width;
      const imageHeight = image.height;
      canvas.width = imageWidth;
      canvas.height = imageHeight;
      context.drawImage(image, 0, 0, imageWidth, imageHeight);
      width_ratio = imageWidth_og / imageWidth;
      height_ratio = imageHeight_og / imageHeight;
      const canvas_area = canvas.width * canvas.height;
      const box_height = (box[3] - box[1]) / height_ratio;
      const box_width = (box[2] - box[0]) / width_ratio;
      const box_area = box_height * box_width;
      const initial_line_width = box_area / canvas_area * 10;
      context.lineWidth = initial_line_width ? initial_line_width > 1 : 1;
      context.strokeStyle = colour;
      await drawRect(box);
      last_box = box;
  }
  async function drawRect(box) {
      context.strokeRect(box[0] / width_ratio, box[1] / height_ratio, (box[2] - box[0]) / width_ratio, (box[3] - box[1]) / height_ratio);
  }
  window.onload = async function() {
      const image = document.getElementById("original_unsplash_image");
      const box = "!{box}".split(",").map(x => Number(x));
      await drawInitialRectangle(box, image);
      image.remove();
      let buttons = document.getElementsByTagName("button");
      for (let i = 0, len = buttons.length; i < len; i++) {
          buttons[i].disabled = false;
          buttons[i].classList.remove("disabled");
      }
  };
  async function submit_answer(button) {
      const button_text = button.textContent;
      if (speakerOn)
      {
        const msg = new SpeechSynthesisUtterance(button_text);
        const voices = synth.getVoices();
        const italian_voice = voices.find(voice => voice.lang === 'it-IT');
        if (!italian_voice)
        {
          alert("Browser does not support Italian pronounciation, speaking function is being turned off.");
          await toggleSpeaker();
        }
        else
        {
          msg.voice = voices.find(voice => voice.lang === 'it-IT');
          msg.lang = 'it-IT'; // Set the language to Italian
          synth.speak(msg);
          count = 0;
          while (window.speechSynthesis.speaking || count < 2)
          {
            await new Promise(r => setTimeout(r, 1000));
            count += 1;
          }
        }
      }
      fetch('/answer', {
              body: JSON.stringify({
                  text: button_text
              }),
              headers: {
                  "Content-Type": "application/json",
              },
              method: 'POST'
          })
          .then(async function(response) {
              if (response.ok) {
                  const result = await response.json();
                  if (result.in_image == true) {
                      button.classList.add("right_answer");
                      context.strokeStyle = "green";
                      await drawRect(last_box);
                      await new Promise(resolve => setTimeout(resolve, 100 || 1000));
                      document.location.href = "/";
                      return;
                  } else {
                      button.classList.add("wrong_answer");
                  }
                  return;
              }
              throw new Error('Request failed.');
          })
          .catch(function(error) {
              console.log(error);
          });
  }
  let speakerOn = !{speakerOn};
  const speakerButton = document.getElementById('speakerButton');
  async function toggleSpeaker() {
      if (speakerOn) {
          speakerButton.classList.remove('speaker-on');
          speakerButton.classList.add('speaker-off');
          speakerButton.innerHTML = 'ðŸ”ˆ';
      } else {
          speakerButton.classList.remove('speaker-off');
          speakerButton.classList.add('speaker-on');
          speakerButton.innerHTML = 'ðŸ”Š';
      }
      speakerOn = !speakerOn;
